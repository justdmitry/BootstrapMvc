<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            padding-top: 5rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-info fixed-top">
        <div class="container-fluid justify-content-start">
            @Html.ActionLink("Bootstrap4Mvc6", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Installation", "Installation", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Basics", "Basics", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Grid", "Grid", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Tables", "Tables", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Components</a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("Alerts", "Components", "Home", new { component = "Alerts" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Badges", "Components", "Home", new { component = "Badges" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Buttons", "Components", "Home", new { component = "Buttons" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Lists", "Components", "Home", new { component = "Lists" }, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item">@Html.ActionLink("Forms", "Forms", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Extend it!", "Extend", "Home", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>

    @using (Bootstrap.BeginContainer(((bool?)ViewBag.ContainerFluid) ?? false))
    {
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; Dmitry Popov 2016-2018; See <a href="https://github.com/justdmitry/BootstrapMvc">BootstrapMvc on GitHub</a></p>
        </footer>
    }

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
